@model FaraDosar.Models.Appointment
@{
    ViewBag.Title = "Creare unei inregistrari";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Appointments",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.DateOfAppointmentStart, new { @class = "control-label" })
                    <div class="input-group date" data-provide="datepicker">
                        @Html.TextBoxFor(model => model.DateOfAppointmentStart, new { @class = "form-control" })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.DateOfAppointmentStart, "", new { @class = "text-danger" })
                </div>

                

                <button class="btn btn-success" type="submit">Adauga programare</button>

            }

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            startDate: new Date(),
            autoclose: true
        });
    });
</script>
