<div class="card bg-dark text-white">
    <img style="width: 1150px; height: 350px" class="card-img max" src="~/img/filler.jpeg" alt="Card image">
    <div class="card-img-overlay">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text">Last updated 3 mins ago</p>
    </div>
</div>
<br />
<br />
<div class="container">
    <div class="row">
        @foreach (FaraDosar.Models.Card card in ViewBag.Cards)
{
        <div class="col-sm-4">
            <div class="card2 shadow p-3 mb-5 bg-white rounded card border-0">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body text-center">
                    <h5 class="card-title mb-0">@card.Title</h5>
                    <div class="card-text text-muted mb-3">@card.Content</div>
                        <a href="/Cards/Show/@card.Id" class="btn btn-outline-primary rounded-pill">Citeste mai departe</a>
                </div>
            </div>
        </div>
}

    </div>
</div>
